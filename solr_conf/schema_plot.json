{
	"add-field-type": [
        {
            "name":"plotType",
            "class":"solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.WhitespaceTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.PatternReplaceFilterFactory", "pattern":"([^A-Za-z0-9])", "replace":"all"},
                    {"class": "solr.StopFilterFactory", "words":"stopwords_en.txt", "ignoreCase": true},
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class":"solr.EnglishPossessiveFilterFactory"}
                ]
            },
            "queryAnalyzer":{
                "tokenizer":{
                    "class":"solr.WhitespaceTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.PatternReplaceFilterFactory", "pattern":"([^A-Za-z0-9])", "replace":"all"},
                    {"class": "solr.SuggestStopFilterFactory", "words":"stopwords_en.txt", "ignoreCase": true},
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class":"solr.EnglishPossessiveFilterFactory"}
                ]
            }
        }
    ],
    "add-field": [
        {
            "name": "plot",
            "type": "plotType",
            "indexed": true,
            "multiValued": true
        }
    ]
}