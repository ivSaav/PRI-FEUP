                    "class":"solr.ClassicTokenizerFactory"
                },
                "filters":[
                    {"class": "solr.StopFilterFactory", "words":"stopwords_en.txt", "ignoreCase": true},
                    {"class":"solr.ASCIIFoldingFilterFactory"},
