{
	"add-field-type": [
        {
            "name": "genreType",
            "class": "solr.TextField",
            "analyzer": {
                "tokenizer": {
                    "class": "solr.LowerCaseTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory"},
                    {"class": "solr.EnglishMinimalStemFilterFactory"}
                ]
            }
        },
        {
            "name": "kindType",
            "class": "solr.TextField",
            "indexAnalizer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory"},
                    {"class":"solr.LowerCaseFilterFactory"}
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory"},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class": "solr.SynonymGraphFilterFactory", "synonyms":"kind_synonyms.txt", "ignoreCase":true}
                ]
            }
        }
    ],
    "add-field": [
        {
            "name": "genre",
            "type": "genreType",
            "indexed": true,
            "multiValued": true
        },
        {
            "name": "kind",
            "type": "kindType",
            "indexed": true
        }
    ]
}